    <style>
        body{
            padding-top: 5px;
        }

        ul{
            display: flex;
            padding: 0px;
            margin: 0px;
            list-style-type: none;
            justify-content: center;
        }

        li{
          padding: 5px 20px 5px 20px;
        }

        #title{
            text-align: center;
            font-size: 24px;
        }

        a{
            text-decoration: none;
        }
        .newnav{
           
        }


    </style>

</head>
<body>
    <p id="title">SmallShopFrame</p>
    <div class="newnav">
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>Products</li>
            <li>About</li>
            <li>
