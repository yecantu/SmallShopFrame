@model SmallShopFrame.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>@Html.Encode(Model.Name)</h2>

<style type="text/css">
    img {
        height: 35%;
        width: 35%;
        float: left;
        margin: 20px;
    }

    .productDetails {
      display: inline-block;
    }

    .productDetails ul {
        list-style-type: none;
        padding: 15px;
    }
</style>

<div class="productDetails">
    <img src="@Model.Image" />
    <ul>
        <li>Price: @Html.Encode(Model.Price)</li>
        <li>Description: @Html.Encode(Model.Description)</li>
    </ul> 
    
    <input type="button" value="Add to Cart" />
</div>



